{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "ARG VERSION=\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "dnsmasq",
      "datasourceTemplate": "repology",
      "lookupNameTemplate": "dnsmasq"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["repology"],
      "matchPackageNames": ["dnsmasq"],
      "versioning": "loose",
      "separateMinorPatch": true,
      "prBodyTemplate": "This PR updates dnsmasq from {{currentVersion}} to {{newVersion}}.\n\nRelease notes: https://thekelleys.org.uk/dnsmasq/CHANGELOG"
    }
  ]
}
